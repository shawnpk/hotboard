<% content_for :title, "Tickets" %>

<div class="w-full">
  <div id='page_content' class='w-full'>
    <%= render 'notice' %>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tickets</h1>
    <%= link_to "New ticket", new_ticket_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium", data: { turbo_frame: dom_id(@ticket) } %>
  </div>

  <%= turbo_frame_tag @ticket, src: new_ticket_path %>

  <div id="tickets" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @tickets.any? %>
      <% @tickets.each do |ticket| %>
        <%= turbo_frame_tag ticket, src: ticket_path(ticket), loading: :lazy do %>
          <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
            <%= render ticket %>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
              <%#= link_to "Edit", edit_ticket_path(ticket), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
              <%#= button_to "Destroy", ticket, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No tickets found.</p>
    <% end %>
  </div>
</div>
